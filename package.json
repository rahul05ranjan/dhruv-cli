{
  "name": "@rahul05ranjan/dhruv-cli",
  "version": "0.0.0-development",
  "description": "AI-powered CLI assistant for developers using Ollama",
  "keywords": [
    "ai",
    "cli",
    "developer-tools",
    "ollama",
    "assistant"
  ],
  "bin": {
    "dhruv": "dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "docs": "typedoc --out docs/api src",
    "docs:serve": "npx serve docs",
    "docs:publish": "npm run docs && gh-pages -d docs",
    "benchmark": "autocannon -c 100 -d 10 http://localhost:3000",
    "performance": "lighthouse http://localhost:3000 --output=json --output-path=./reports/lighthouse.json",
    "security": "npm audit --audit-level=moderate",
    "security:full": "npm audit --audit-level=info",
    "clean": "rm -rf dist coverage .dhruv-cache logs/*.log",
    "prepublishOnly": "npm run clean && npm run lint && npm run test:ci && npm run build",
    "release": "semantic-release",
    "release:beta": "semantic-release --tag beta",
    "docker:build": "docker build -t dhruv-cli .",
    "docker:run": "docker run -it dhruv-cli",
    "health": "node dist/index.js health",
    "metrics": "node dist/index.js metrics"
  },
  "dependencies": {
    "@langchain/community": "^0.3.53",
    "@langchain/core": "^0.3.72",
    "@langchain/ollama": "^0.2.3",
    "@types/winston": "^2.4.4",
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "express-prometheus-metrics": "^0.1.0",
    "helmet": "^8.1.0",
    "inquirer": "^12.6.3",
    "joi": "^18.0.1",
    "langchain": "^0.3.31",
    "node-fetch": "^3.3.2",
    "ollama": "^0.5.16",
    "ora": "^8.2.0",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^7.2.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@lhci/cli": "^0.15.1",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@types/nock": "^10.0.3",
    "@types/node": "^24.0.7",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "autocannon": "^8.0.0",
    "benchmark": "^2.1.4",
    "eslint": "^9.30.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.2.0",
    "jest": "^30.1.0",
    "jsdoc-to-markdown": "^9.1.2",
    "lighthouse": "^12.8.1",
    "nock": "^14.0.10",
    "semantic-release": "^23.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.28.11",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rahul05ranjan/dhruv-cli.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
